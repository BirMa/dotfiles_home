! configuration for URxvt

! iso14755-enable-keys apparently can't be rebound (ctrs+shift); Disable it for better clipboard use.
URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt.saveLines: 65536
URxvt.tabbed.saveLines: 65536
URxvt.scrollBar: true
URxvt.tabbed.scrollBar: true
URxvt.scrollColor: #1B2A1B
URxvt.scrollstyle: plain
URxvt.secondaryScroll: true
URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true
URxvt.jumpScroll: true
URxvt.scrollWithBuffer: true

!URxvt.meta8: true
!URxvt*tripleclickwords: false

! URxvt.lineSpace: 0
URxvt.letterSpace: -1

! URxvt.modifier: mod5

! Font
URxvt.font: xft:Bitstream Vera Sans Mono:pixelsize=15:autohint=true
URxvt.boldFont: xft:Bitstream Vera Sans Mono:pixelsize=15:bold:autohint=true
URxvt.italicFont: xft:Bitstream Vera Sans Mono:pixelsize=15:italic:autohint=true
URxvt.bolditalicFont: xft:Bitstream Vera Sans Mono:pixelsize=15:bold:italic:autohint=true
URxvt.tabbed.font: xft:Bitstream Vera Sans Mono:pixelsize=15:autohint=true

! for better clipboard usage, url-highlighting, etc.
URxvt.tabbed.perl-ext-common: default,matcher,clipboard,tabbed
URxvt.perl-ext-common: default,matcher,clipboard,tabbed
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

! colors
URxvt.tabbed.tabbar-fg: 0
URxvt.tabbed.tabbar-bg: 16
URxvt.tabbed.tab-fg: 2
URxvt.tabbed.tab-bg: 16
URxvt.tabbed.secondaryScroll: true
URxvt.background: #000000
URxvt.foreground: #00FF00

URxvt.pointerColor: #006400
URxvt.pointerColorBackground: #FFFFFF
URxvt.cursorColor: #00FF00

! dark grey
URxvt.color0: #2E3436

! red
URxvt.color1: #CC0000

! green
URxvt.color2: #4E9A06

! orange yellow
URxvt.color3: #C4A000

! blue
URxvt.color4: #3465A4

! violet
URxvt.color5: #75507B

! light blue
URxvt.color6: #06989A

! white
URxvt.color7: #D3D7CF

! light grey
URxvt.color8: #555753

! dark red
